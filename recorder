local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TowerPlacementEvent = ReplicatedStorage:WaitForChild("TowerPlacementEvent")

local player = game.Players.LocalPlayer
local mouse = player:GetMouse()

local function sendTowerPlacement()
    local hitPosition = mouse.Hit.p
    -- Send data to server
    TowerPlacementEvent:FireServer(hitPosition)
    
    -- Optional: log locally
    print(string.format("Sent tower placement at: %.2f, %.2f, %.2f", hitPosition.X, hitPosition.Y, hitPosition.Z))
end

-- Example: bind to a key press to send placement
game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.P then -- Press P to send placement
        sendTowerPlacement()
    end
end)
