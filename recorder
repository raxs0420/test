-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TowerPlacementRecorderGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create Control Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 150)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

-- Status TextBox
local console = Instance.new("TextBox")
console.Size = UDim2.new(1, -20, 0, 100)
console.Position = UDim2.new(0, 10, 0, 10)
console.Text = "Tower placements:\n"
console.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
console.TextColor3 = Color3.new(1, 1, 1)
console.ClearTextOnFocus = false
console.MultiLine = true
console.Parent = frame

-- Button to simulate tower placement (for testing)
local placeTowerButton = Instance.new("TextButton")
placeTowerButton.Size = UDim2.new(1, -20, 0, 40)
placeTowerButton.Position = UDim2.new(0, 10, 0, 115)
placeTowerButton.Text = "Simulate Tower Placement"
placeTowerButton.Parent = frame

local function updateConsole(text)
    console.Text = console.Text .. text .. "\n"
    -- Keep the last few lines
    local lines = string.split(console.Text, "\n")
    if #lines > 20 then
        lines = table.move(lines, #lines - 19, #lines, 1, {})
        console.Text = table.concat(lines, "\n")
    end
end

-- Function to record a tower placement
local function recordTowerPlacement(position)
    local logText = string.format("Tower placed at: %.2f, %.2f, %.2f", position.X, position.Y, position.Z)
    print(logText)
    updateConsole(logText)
end

-- For testing: simulate tower placement
placeTowerButton.MouseButton1Click:Connect(function()
    -- Example: randomly generate a position
    local position = Vector3.new(math.random(0, 100), 0, math.random(0, 100))
    recordTowerPlacement(position)
end)

